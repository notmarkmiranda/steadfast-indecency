<%= render partial: "shared/breadcrumbs" %>
<div class="grid grid-cols-1 content-around">
  <table class="w-100 table-auto border-separate border-spacing-1 border border-slate-400">
    <thead>
      <tr>
        <th class="border border-slate-300 px-4 py-1">Prop</th>
        <th class="border border-slate-300 px-4 py-1">Option A</th>
        <th class="border border-slate-300 px-4 py-1">Option B</th>
      </tr>
    </thead>
    <tbody>
      <% @pool.questions.decorate.each do |question| %>
      <tr>
        <td class="border border-slate-300 px-4 py-1"><%= question.body %></td>
        <td class="border border-slate-300 px-4 py-1 pt-2">
          <%= button_to question.first_option.body, option_pool_correct_path(@pool, question.first_option), method: :put, class: "w-full text-blue-700 hover:text-white border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium text-sm px-2 py-1 text-center me-2 mb-2 dark:border-blue-500 dark:text-blue-500 dark:hover:text-white dark:hover:bg-blue-500 dark:focus:ring-blue-800" %>
        </td>
        <td class="border border-slate-300 px-4 py-1 pt-2">
          <%= button_to question.last_option.body, "#", class: "w-full text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium text-sm px-2 py-1 text-center me-2 mb-2 dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-500 dark:focus:ring-red-800" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>