<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-4">Pool Details</h1>
  <div class="bg-white shadow-md rounded-lg p-6 mb-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <h2 class="text-lg font-bold mb-2"><%= @pool.name %></h2>
        <p class="text-gray-600 mb-2"><%= @pool.description %></p>
        <p class="text-gray-600 mb-2">Cutoff Date: <%= @pool.cutoff_date.strftime("%B %d, %Y") %></p>
        <p class="text-gray-600 mb-2">Event Date: <%= @pool.event_date.strftime("%B %d, %Y") %></p>
        <p class="text-gray-600 mb-2">Allows Multiple Entries: <%= @pool.allows_multiple_entries? ? "Yes" : "No" %></p>
      </div>

      <div>
        <h3 class="text-lg font-bold mb-2">Members</h3>
        <ul class="list-disc list-inside ml-4">
          <% @pool.memberships.each do |membership| %>
            <li class="text-gray-600 mb-2"><%= membership.user.email %> - <%= membership.role %></li>
          <% end %>
        </ul>
        <% if policy(@pool).admin? %>
          <%= link_to "Invite New Member", new_pool_membership_path(@pool), class: "text-blue-500 underline" %>
        <% end %>
      </div>
    </div>
    <div>
      <h3 class="text-lg font-bold mb-2">Questions</h3>
      <% if @pool.saved_questions.any? %>
        <ol class="list-decimal list-inside ml-4">
          <% @pool.saved_questions.each do |question| %>
            <li class="text-gray-600 mb-2">
              <%= question.body %>
              <ul class="list-disc list-inside ml-4"> <!-- Add list-disc class here -->
                <% question.options.each do |option| %>
                  <li><%= option.body %></li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ol>
      <% else %>
        <p class="text-gray-600 mb-2">No questions have been added to this pool yet.</p>
      <% end %>
    </div>
  </div>

  <% if @pool.is_in_the_future? && policy(@pool).admin? %>
    <%= render "question_form" %>
  <% end %>
</div>
